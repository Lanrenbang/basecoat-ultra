{
  "name": "@lanrenbang/basecoat-ultra",
  "version": "0.2.0",
  "description": "Basecoat UI - Ultra edition. A Tailwind-first component library for any web stack.",
  "type": "module",
  "license": "MIT",
  "author": "Lanrenbang",
  "repository": {
